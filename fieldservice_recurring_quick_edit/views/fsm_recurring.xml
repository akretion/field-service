<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fsm_recurring_form_view" model="ir.ui.view">
        <field name="model">fsm.recurring</field>
        <field name="inherit_id" ref="fieldservice_recurring.fsm_recurring_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_view_fms_order"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('fsm_order_count', '=', 0)]}"
                >
                    <field name="fsm_order_count" widget="statinfo" string="Orders" />
                </button>
            </xpath>
            <button name="action_cancel" position="before">
                <button
                    id="generate_orders"
                    name="generate_orders"
                    string="Generate Orders"
                    type="object"
                />
                <button 
                    id="generate_5w"
                    name="generate_5w"
                    string="Generate 5w FSM"
                    type="object"
                />
            </button>
            <field name="fsm_frequency_set_id" position="before">
                <field name="frequency_type" />
            </field>
            <field name="fsm_frequency_set_id" position="attributes">
                <attribute name="attrs">
                        {'invisible':
                        [('frequency_type', '!=', 'use_predefined')],
                        'required': [('frequency_type', '=', 'use_predefined')]
                        }
                </attribute>
            </field>
            <xpath expr="//field[@name='fsm_order_template_id']/.." position="after">
                <group>
                    <div
                        attrs="{'invisible': [('frequency_type', '=', 'use_predefined')]}"
                        name="weekdays"
                    >
                        <field name="fsm_frequency_set_qedit_id" readonly="True" />
                        <field name="fsm_frequency_qedit_ids"
                            widget="section_and_note_one2many"
                            mode="tree,form"
                            context="{'default_fsm_recurring_id': active_id}" >
                            <tree editable="bottom">
                                <field name="interval_frequency" />
                                <field name="week_day"/>
                                <field name="planned_hour" widget="float_time" />
                                <field name="interval_type" invisible="1" />
                                <field name="use_planned_hour" invisible="1" />
                                <field name="use_byweekday" invisible="1" />
                            </tree>
                        </field>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
